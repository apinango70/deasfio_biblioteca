
<h1>Desafío Biblioteca</h1>
<p>Find me in app/views/bibliotecas/index.html.erb</p>
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons">
<link rel="stylesheet" href="https://unpkg.com/bootstrap-material-design@4.1.1/dist/css/bootstrap-material-design.min.css" integrity="sha384-wXznGJNEXNG1NFsbm0ugrLFMQPWswR3lds2VeinahP8N0zJw9VWSopbjv2x7WCvX" crossorigin="anonymous">
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons">
<body>

<!-- Barra de búsqueda -->
	<nav class="navbar navbar-light bg-light">
	    <div class="container-fluid">
	      <a class="navbar-brand"></a>
	      <form class="d-flex">
	        <label for="estado">Filtrar por estado del préstamo    </label>
	        <select name="estado" id="estado"  class="form-select" aria-label="Default select example">

	          <option value="">Todos los libros</option>
	          <option>En estante</option>
	          <option>Prestado</option>

	        </select>
					<button class="btn btn-outline-success"  type="submit">Mostrar</button>
	      </form>
	    </div>
	  </nav>

<!-- tabla de registros -->

	  <div class="container">
	    <div class="title">
	      <h1>Biblioteca personal</h1>
	    </div>
	    <div class="row">

	      <div class="col-lg-12 col-md-10 ml-auto mr-auto">



						<p id="notice"><%= notice %></p>

							<%= notice %>
<h2>Libros</h2>

<div class="table-responsive">
	<table class="table">
		<thead>
			<tr>
				<!-- Aplico el ordenamiento de las columnas con ramsack para la columna título-->

				<th><%= sort_link(@q, :titulo) %></th>
				<th>Autor</th>
				<th>Estado</th>
				<th>Fecha de préstamo</th>
				<th >Fecha devolución</th>
        <th colspan= "3" style="text-align: center">Opciones</th>

			</tr>
		</thead>

		<tbody>
			<% @bibliotecas.each do |biblioteca| %>
				<tr>
					<td> <%= biblioteca.titulo %> </td>
					<td> <%= biblioteca.autor %></td>
					<td> <%= biblioteca.estado %></td>
					<td> <%= biblioteca.fecha_prestamo %></td>
					<td> <%= biblioteca.fecha_devolucion %></td>
					<td> <%= link_to 'Ver', biblioteca %></td>
					<td> <%= link_to 'Editar', edit_biblioteca_path(biblioteca) %></td>
					<td> <%= link_to 'Destroy', biblioteca, method: :delete, data: {confirm: 'Estas seguro ?'} %></td>
				</tr>
			<% end %>
		</tbody>

	</table>

</div>

</div>
	<br>

	<%= link_to 'Nuevo Libro', new_biblioteca_path %>
</div>
